<%- include ("./partials/header") %>
    <div class="container  form-style">
        <form action="/newGroup" method="POST">
              <h2 style="margin-left:5px;"><strong>Create New Community</strong></h2>
              <div class="mb-3">
                <label for="groupName" class="form-label">Community Name</label>
                <input name="name" type="text" class="form-control" id="groupName" required>
              </div>
              <div class="form-floating">
                <textarea name="members" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 300px" required data-bs-toggle="tooltip" title="Enter all members username in new line.(Username can be seen on top-right corner of page)"></textarea>
                <label for="floatingTextarea2">Colleagues username</label>
              </div>
              <br>
              <button type="submit" class="btn btn-primary" style="background-color:#0E185F;border:none">Create Community</button>
        </form>
    </div>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>